---
import '98.css';
import Taskbar from './taskbar.astro';
import Window from './window.astro';
---

<div class="desktop">
	<div class="workspace">
		<div class="window-slot">
			<Window/>
		</div>
	</div>
	<Taskbar/>
</div>

<style>
	.desktop {
		margin: 0px;
		background-color:#008080;
		overscroll-behavior: none;
		position:absolute;
		top:0px;
		right:0px;
		bottom:0px;
		left:0px;
	}
	.workspace {
		/* background-color: aqua; */
		/* height: calc(100vh - 32px); */
	}
	.window-slot {
		position: fixed;
		left: 20%;
		width: 70%;
		height: calc(100vh - 38px);
	}
</style>